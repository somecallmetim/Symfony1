{% extends '::base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link rel="stylesheet" href= {{ asset('bundles/user/css/register.css') }} />

{% endblock %}

{% block body %}
<section class="main-block">
    <article>
        <section>
            <h1>Register</h1>
            <form action="{{ path('user_register') }}" method="POST">

                {{ form_errors(form) }}

                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first, {'label': 'Password'}) }}
                {{ form_row(form.plainPassword.second, {'label': "Repeat Password"}) }}

                {{ form_rest(form) }}

                <input type="submit" value="Register!" formnovalidate/>
            </form>
        </section>
    </article>
</section>
{% endblock %}